*
  box-sizing border-box

body
  margin 50px

.scroller
  border 1px solid black
  height 200px
  overflow hidden
  position relative
  width 200px

  .scrollbar
    bottom 0
    position absolute
    right 0
    top 0
    width 10px
    z-index 20

  .scrollbar-track
    background black
    left 2px
    position absolute
    right 2px
    border-radius 3px

  .scroll-content-container
    bottom 0
    left 0
    overflow hidden
    overflow-y scroll
    position absolute
    right 0
    top 0

    &::-webkit-scrollbar
      height 0
      width 0

