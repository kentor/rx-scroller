*
  box-sizing border-box

body
  margin 0

.scroller
  overflow hidden
  position relative
  width 100%
  height 100vh

  &::-webkit-scrollbar
    height 0
    width 0

  .scrollbar-track
    bottom 0
    position absolute
    right 0
    top 0
    width 10px
    z-index 20

  .scrollbar-thumb
    left 2px
    opacity 0
    position absolute
    right 2px
    transition opacity .25s ease-in-out

    &:before
      background #333
      border-radius 7px
      bottom 2px
      content ''
      display block
      left 0
      position absolute
      right 0
      top 2px

    &.visible
      opacity 1

  .scroll-viewport
    bottom 0
    left 0
    overflow hidden
    overflow-y scroll
    position absolute
    right -17px
    top 0

